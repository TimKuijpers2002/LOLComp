@model IEnumerable<LOLComp.Models.SummonerViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLOLPage.cshtml";
}

@if (TempData["LoggedIn"] != null)
{
    <p class="alert alert-success">@TempData["LoggedIn"]</p>
}
@if (TempData["IndexErrors"] != null)
{
    <p class="alert alert-danger">@TempData["IndexErrors"]</p>
}

<div class="text-center">
    <h1 class="display-4">Enter your summonername</h1>
    @using (Html.BeginForm("Index", "LOL", FormMethod.Get))
    {
        @Html.TextBox("summonerName", null, new { @id = "search", @class = "search", @placeholder = "Summonername...", @type = "text" })
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileIconID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SummonerLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileIconID)
            </td>
            <td>
                @Html.ActionLink(item.Name, "Profile", new { summonerName = item.Name, region = item.Region })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummonerLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
        </tr>
        }
    </tbody>
</table>
