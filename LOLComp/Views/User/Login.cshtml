@model LOLComp.Models.UserLoginViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutNoNavBar.cshtml";
}

<h1>Login</h1>

<hr />
@if (TempData["Registrated"] != null)
{
    <p class="alert-success">@TempData["Registrated"]</p>
}
@if (TempData["UserLoginFailed"] != null)
{
    <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>
}

@if (TempData["UserLogout"] != null)
{
    <p class="alert alert-info">@TempData["UserLogout"]</p>
}
@if (TempData["Delete"] != null)
{
    <strong class="alert alert-danger">@TempData["Delete"]</strong>
    <br />
    <br />
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" asp-action="Login" asp-controller="User" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Create" asp-controller="User">Don't have an account yet? Register here!</a>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
