@model LOLComp.Models.CreateGroupViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLOLPage.cshtml";
}

<h1>Create</h1>

@if (TempData["RequesterError"] != null)
{
    <p class="alert alert-danger">@TempData["RequesterError"]</p>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SummonerName" class="control-label"></label>
                <input asp-for="SummonerName" class="form-control" />
                <span asp-validation-for="SummonerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Region" class="form-control" id="StudentGender" name="Region">
                    <option>BR1</option>
                    <option>EUN1</option>
                    <option>EUW1</option>
                    <option>JP1</option>
                    <option>KR</option>
                    <option>LA1</option>
                    <option>LA2</option>
                    <option>NA1</option>
                    <option>OC1</option>
                    <option>RU</option>
                    <option>TR1</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="Create" asp-controller="Group" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
